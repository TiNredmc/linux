/ {
	model = "Lichee Pi Nano";
	compatible = "licheepi,licheepi-nano", "allwinner,suniv-f1c100s";

	aliases {
		serial0 = &uart0;
		spi0 = &spi0;
		spi1 = &spi1;
		i2c0 = &i2c0;
		pwm = &pwm;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

