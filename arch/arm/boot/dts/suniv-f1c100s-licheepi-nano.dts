	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	bat: battery{// ALl settings are unique to each battery !
		compatible = "simple-battery";
		voltage-min-design-microvolt = <2500000>; // minimum voltage that hurts battery less is 2.5v
		energy-full-design-microwatt-hours = <14800000>; // 0.814 mWh -> 8.14e5 uWh
		charge-full-design-microamp-hours = <4000000>; // 220 mAh -> 2.2e5 uAh
	};
};

&otg_sram{
	status = "okay";
};

&be0 {
	status = "okay";
};

&de {
	status = "okay";
};

&i2c0 {
    pinctrl-0 = <&i2c0_pins>;
    pinctrl-names = "default";
    status = "okay";
    clock-frequency = <400000>;// 400kHz
    WACrst-gpios = <&pio 4 9 GPIO_ACTIVE_HIGH>;//PE9, host reset w9013 when it cause bus lock.

	touchscreen: digitizer@9{
		pinctrl-names = "default";
		pinctrl-0 = <&WACINT_pin>;
		compatible = "wacom,w9013";
		reg = <0x09>;//W9013 i2c address
		interrupt-parent = <&pio>;// Interrupt parent is our pin control (pio)
		interrupts = <4 10 IRQ_TYPE_EDGE_FALLING>;//PE 10 detect falling edge, 4 represent port E
	};

	bq27542: fuel-guage@55{
		compatible = "ti,bq27541";
		reg = <0x55>;
		monitored-battery = <&bat>;
	};
};

&mmc0 {
	vmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	broken-cd;
	status = "okay";
};

&pio {
	status = "okay";
};

&pwm{
	pinctrl-names = "default";
	pinctrl-0 = <&pwm1_pins>;
	status = "okay";
};

&spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins_a>;
	status = "okay";

	NAND:W25N01GV@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand","allwinner,sun4i-a10-nand";
		reg = <0>;
		spi-max-frequency = <50000000>;

        partitions {
            compatible = "fixed-partitions";
            #address-cells = <1>;
            #size-cells = <1>;

            partition@0 {
                label = "uboot";
                reg = <0x000000 0x80000>;
                read-only;
            };

            partition@80000 {
                label = "dtb";
                reg = <0x80000 0x2800>;
                read-only;
            };

            partition@A0000 {
                label = "kernel";
                reg = <0xA0000 0x400000>;
                read-only;
            };

            partition@4A0000 {
                label = "rootfs";
                reg = <0x4A0000 0x7B60000>;
            };
        };
        	};

};

&spi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pins_a>;
	status = "okay";
	
